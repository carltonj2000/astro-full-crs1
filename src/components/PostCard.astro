---
import { Image } from "@astrojs/image/components";
import { formatDate, slugify } from "../js/utils.js";
import Link from "./Link.astro";
const { url, frontmatter, tagType } = Astro.props;
const { title, date, category, author, image, description } = frontmatter;
const Tag = tagType;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}`} class="badge">{category}</a>
  </small>
  <a href={url} tabindex="-1" aria-hidden="true">
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="webp"
      fit="cover"
      quality={80}
      aspectRatio="4:1"
    />
  </a>
  <div class="content">
    <div>
      <Tag class="h3">
        <a href="">{title}</a>
      </Tag>
      <small>
        by <a href={`/author/${slugify(author)}`}>{author}</a> &#183; {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>
