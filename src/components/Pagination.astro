---
import Link from "./Link.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog Pages">
  {
    prevUrl && (
      <Link
        text="Previous"
        href={prevUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: "tabler:arrow-big-left-line", side: "left" }}
      />
    )
  }
  <p>Page</p>
  {
    nextUrl && (
      <Link
        text="Next"
        href={nextUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: "tabler:arrow-big-right-line", side: "right" }}
      />
    )
  }
</nav>

<style>
  nav {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
</style>
