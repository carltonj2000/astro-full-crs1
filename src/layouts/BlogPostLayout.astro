---
import CategoryCloud from "../components/CategoryCloud.astro";
import Related from "../components/Related.astro";
import BlogPostHeader from "./BlogPostHeader.astro";
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
const { title, description, date, category, author, image, robots } =
  frontmatter;
---

<MainLayout {title} {description} {image} {frontmatter} {robots}>
  <BlogPostHeader {title} {date} {category} {author} {image} />
  <div class="post-content">
    <div class="content">
      <slot>default content</slot>
    </div>
    <div class="sidebar">
      <aside class="container" aria-label="Blog categories">
        <h2>Blog Categories</h2>
        <CategoryCloud />
      </aside>
      <Related {category} {author} {title} />
    </div>
  </div>
</MainLayout>
